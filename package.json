{
  "name": "fuzzybase",
  "productName": "Fuzzybase",
  "version": "0.0.1",
  "description": "Fuzzybase - SQL database client with fuzzy queries support",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krzysztof-miemiec/fuzzybase.git"
  },
  "author": {
    "name": "Krzysztof Miemiec",
    "email": "krzysztof.miemiec@gmail.com",
    "url": "https://linkedin.com/in/krzysztof-miemiec"
  },
  "license": "MIT",
  "homepage": "https://github.com/krzysztof-miemiec/fuzzybase#readme",
  "bugs": {
    "url": "https://github.com/krzysztof-miemiec/fuzzybase/issues"
  },
  "keywords": [
    "postgres",
    "electron",
    "react",
    "flux",
    "webpack"
  ],
  "devEngines": {
    "node": ">=8.x",
    "npm": ">=5.x"
  },
  "main": "./app/dist/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "purge": "yarn clean && rimraf 'node_modules' && yarn",
    "clean": "rimraf '{release,app/dist,.tscache,reports,screenshots}'",
    "build": "electron-webpack",
    "dev": "electron-webpack dev",
    "dist": "yarn clean && yarn build && electron-builder",
    "lint": "mkdir -p reports && tslint './src/**/*.{js,ts,tsx}' --project ./ --format json --out './reports/lint.json' || tslint './src/**/*.{js,ts,tsx}' --project ./ --format stylish"
  },
  "electronWebpack": {
    "commonSourceDirectory": "src/common",
    "main": {
      "sourceDirectory": "src/main",
      "webpackConfig": "webpack.additions.js"
    },
    "renderer": {
      "sourceDirectory": "src/renderer",
      "webpackConfig": "webpack.additions.js",
      "webpackDllConfig": "webpack.additions.js"
    }
  },
  "build": {
    "productName": "Fuzzybase",
    "appId": "com.krzysztofmiemiec.fuzzybase",
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 150,
          "type": "file"
        },
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "build/dist/",
      "node_modules/",
      "app.html",
      "main.js",
      "main.js.map",
      "app/package.json"
    ],
    "directories": {
      "buildResources": "app/dist",
      "output": "release"
    },
    "mac": {
      "target": [
        "dir"
      ]
    },
    "win": {
      "target": [
        "dir"
      ]
    },
    "linux": {
      "target": [
        "dir",
        "deb"
      ]
    }
  },
  "dependencies": {
    "@material-ui/icons": "^1.0.0-beta.43",
    "classnames": "^2.2.5",
    "electron-debug": "^1.5.0",
    "electron-devtools-installer": "^2.2.3",
    "history": "^4.7.2",
    "i18next": "^11.2.3",
    "i18next-electron-language-detector": "^0.0.10",
    "lodash": "^4.17.10",
    "material-ui": "^1.0.0-beta.45",
    "pg": "^7.4.2",
    "raven-js": "^3.24.2",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-hot-loader": "^4.1.2",
    "react-i18next": "^7.6.1",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-redux": "^5.0.0-alpha.9",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.13.2",
    "redux-observable": "1.0.0-alpha.2",
    "redux-persist": "^5.9.1",
    "rxjs": "^6.1.0",
    "source-map-support": "^0.5.4",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.3",
    "@types/history": "^4.6.2",
    "@types/i18next": "^8.4.3",
    "@types/jest": "^22.2.3",
    "@types/pg": "^7.4.8",
    "@types/react": "^16.3.13",
    "@types/react-redux": "^5.0.19",
    "@types/react-router": "^4.0.24",
    "@types/react-router-redux": "^5.0.13",
    "@types/uuid": "^3.4.3",
    "electron": "2.0.0",
    "electron-builder": "^20.11.1",
    "electron-webpack": "^2.1.0",
    "electron-webpack-ts": "^2.0.2",
    "jest": "^22.4.3",
    "lemmy": "^0.0.13",
    "rimraf": "^2.6.2",
    "tslint": "^5.10.0",
    "tslint-loader": "^3.6.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.3",
    "webpack": "^4.7.0",
    "webpack-build-notifier": "^0.1.25"
  },
  "resolutions": {
    "webpack-sources": "1.1.0"
  }
}
